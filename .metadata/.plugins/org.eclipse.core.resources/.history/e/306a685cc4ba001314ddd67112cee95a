import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class TestGame extends JPanel implements ActionListener
{
	protected static final String commandString = "Type command...";
	
	public TestGame()
	{
		JTextField command = new JTextField();
		command.setActionCommand(commandString);
		command.addActionListener(this);
		
	}
	
	public static void main(String [] args)
	{
		
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				runEnvironment();
			}
		});
	}
	
	public void  actionPerformed(ActionEvent e)
	{
		Deck deck = new Deck();
		if (e.getActionCommand().equals("Display"))
		{
			JTextArea content = new JTextArea();
			for (int i = 0; i < deck.getDeck().size(); i++)
			{
				content.append(deck.getDeck().get(i).getName() + "\n");
			}
			content.setEditable(false);
			JScrollPane contentScrollPane = new JScrollPane(content);
			contentScrollPane.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		}
	}
	
	public static void runEnvironment()
	{
		JFrame frame = new JFrame("Test Game");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		
		frame.add(new TestGame());
		//JMenuBar menu = new JMenuBar();
		//menu.setOpaque(true);
		//menu.setBackground(new Color(177, 179, 181));
		//menu.setPreferredSize(new Dimension(200, 20));
		
		//JLabel background = new JLabel();
		//background.setOpaque(true);
		//background.setPreferredSize(new Dimension(200, 180));
		
		//frame.setJMenuBar(menu);
		//frame.getContentPane().add(background, BorderLayout.CENTER);
		
		frame.pack();
		frame.setVisible(true);
	}
	
	
}
